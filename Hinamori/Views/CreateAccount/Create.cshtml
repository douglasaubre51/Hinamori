@model Hinamori.Models.UserInfo

<div class="create-container">
    <form method="post" asp-action="Create" asp-controller="CreateAccount">
        <div class="form-group">
            <label asp-for="@Model.Username">
                Username:
            </label>
            <input asp-for="@Model.Username" />
            <span asp-validation-for="@Model.Username"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Email">
                Email:
            </label>
            <input type='email' asp-for="@Model.Email" />
            <span asp-validation-for="@Model.Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Password">
                Password:
            </label>
            <input type="password" asp-for="@Model.Password" />
            <span asp-validation-for="@Model.Password"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.DateOfBirth">
                Date of Birth:
            </label>
            <input type="date" asp-for="@Model.DateOfBirth" />
            <span asp-validation-for="@Model.DateOfBirth"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.ProfilePicture">
                Profile Picture:
            </label>
            <input asp-for="@Model.ProfilePicture" />
            <span asp-validation-for="@Model.ProfilePicture"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Role">
                Role:
            </label>
            <input asp-for="@Model.Role" />
            <span asp-validation-for="@Model.Role"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Course">
                Course:
            </label>
            <input asp-for="@Model.Course" />
            <span asp-validation-for="@Model.Course"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Semester">
                Semester:
            </label>
            <input asp-for="@Model.Semester" />
            <span asp-validation-for="@Model.Semester"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create Account" />
        </div>
    </form>
</div>