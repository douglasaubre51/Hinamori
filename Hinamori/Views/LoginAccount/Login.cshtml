@model Hinamori.ViewModels.LoginViewModel

<link href="~/css/LoginAccount/Login.css" rel="stylesheet" />

<div class="container">
    <forn class="form-container" asp-action="Login" asp-controller="LoginAccount" method="post">
        <div class="form-group">
            <label asp-for="@Model.EmailValidation">
                <input type="text" asp-for="@Model.EmailValidation" />
            </label>
            <span asp-validation-for="@Model.EmailValidation"></span>
            <span>@ViewBag.ValidateEmail</span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.EmailValidation">
                <input type="text" asp-for="@Model.EmailValidation" />
            </label>
            <span asp-validation-for="@Model.EmailValidation"></span>
            <span>@ViewBag.ValidatePassword</span>
        </div>

        <div class="form-group">
            <div class="btn-container">
                <input type="submit" value="Login" class="btn btn-primary" />

                <input type="reset" value="clear" class="btn btn-primary" />
            </div>
        </div>
    </forn>
</div>